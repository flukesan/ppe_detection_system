# PPE Detection System Environment Variables

# Application Settings
APP_NAME=PPE Detection System
APP_VERSION=1.0.0
DEBUG=False

# Camera Settings
DEFAULT_CAMERA_ID=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# Detection Settings
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.4
USE_GPU=True
GPU_DEVICE=0

# Model Paths
YOLOV9_POSE_MODEL=models/yolov9c-pose.pt
PPE_DETECTION_MODEL=models/ppe_detection_best.pt

# Database
DATABASE_PATH=data/database/ppe_detections.db

# Logging
LOG_LEVEL=INFO
LOG_PATH=data/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Video Recording
RECORD_VIOLATIONS=True
VIDEO_SAVE_PATH=data/videos/
VIDEO_CODEC=mp4v
VIDEO_QUALITY=80

# Alert Settings
ENABLE_ALERTS=True
ALERT_SOUND=True
ALERT_EMAIL=False

# Email Settings (if ALERT_EMAIL=True)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_RECIPIENTS=admin@company.com,safety@company.com

# Line Notify (Optional)
LINE_NOTIFY_TOKEN=

# Performance
MAX_DETECTION_THREADS=4
FRAME_SKIP=0
TEMPORAL_BUFFER_SIZE=30

# UI Settings
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080
THEME=dark
LANGUAGE=th
